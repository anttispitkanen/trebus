<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>TreBus</title>
    </head>
    <body>
        <h1>TreBus â€“ The best bus app in Tampere</h1>

        <ul id="addresses">
            <% addresses.map((address) => { %>
                <li class="address-info">
                    <span><%= address.name %></span>
                    <span><%= address.address %></span>
                </li>
            <% }) %>
        </ul>
        <button id="update">Edit</button>

        <form class="search-form" action="/addresses" method="post">
            <input type="text" placeholder="enter name for hotspot" name="name">
            <input type="text" placeholder="enter address" name="address">
            <button type="submit">Add address</button>
        </form>

        <!--<button id="test">Try this!</button>-->
        <button id="delete-latest">Delete the latest one!</button>

        <ul>
            <li id="duration">I'll be there in: </li>
            <li id="departure">Departure time: </li>
            <li id="bus-num">Bus number: </li>
            <li id="starting-point">From: </li>
            <li id="arrival">Arrival time: </li>
        </ul>

        <script src="main.js"></script>
    </body>
</html>
